{
  "manifest_version": 2,
  "name": "Hulu WV Ripper Assistant",
  "description": "Assists the Widevine L3 Decryptor by producing Hulu related metadata and manifests",
  "version": "1.0.0",
  "author": "Puyodead1",
  "browser_action": {
    "default_icon": "img/icon128.png"
  },
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://player.hulu.com/*",
        "*://www.player.hulu.com/*",
        "*://hulu.com/*",
        "*://www.hulu.com/*"
      ],
      "all_frames": true,
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": ["msl_client.js", "app.js"],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://player.hulu.com/*",
    "*://www.player.hulu.com/*",
    "*://hulu.com/*",
    "*://www.hulu.com/*"
  ]
}
